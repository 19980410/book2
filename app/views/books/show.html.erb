<div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if flash[:edit] %>
      <div class="edit">
        <%= flash[:edit] %>
      </div>
    <% end %>

    <div class="row">
        <div class="col-xs-3">
             <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
            <div id="error_explanation">
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <li><%= message %></li>
                <% end %>
                    </ul>
            </div>
            <% end %>
                <table class="table">
                    <tr>
                    <%= attachment_image_tag @user, :profile_image, format:'jpeg', class: " pull-left profile-thumb", size: "100x100", fallback: "no_image.png"%>
                    </tr>
                    <tr>
                        <th>name</th>
                        <th><%= @user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= @user.introduction %></th>
                    </tr>
                </table>

            <div class="row">
            <% if @user.id == current_user.id %>
              <%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% else %>
              <%= link_to "",user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
            <% end %>
            </div>
                <h2>New book</h2>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Title</h4>
                <%= f.text_field :title, class:"book_title col-xs-12" %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Opinion</h4>
                <%= f.text_area :body, class:"book_body col-xs-12"  %>
                </div>

                <div class="field row" style="margin-bottom:10px;">
                <%= f.submit "Create Book", class:"book_submit btn btn-primary col-xs-12" %>
                    </div>
                <% end %>   
                </div>


        <div class="col-xs-9">
            <h2>Book detail</h2>
            <table class="table">
                <tbody>
                    <tr>
                        <td><%= link_to(@book.user) do %>
                        <%= attachment_image_tag @book.user, :profile_image, format:'jpeg', class: " pull-left profile-thumb", size: "50x50", fallback: "no_image.png"%><br>
                        <%= @user.name %>
                        <% end %>
                        </td>
                        <td><%= @book.title%></td>
                        <td><%= @book.body %></td>
                        <% if @book.user == current_user %>
                        <td><%= link_to "Edit", edit_book_path(@book), class:"btn-sm btn-success edit_book_7842 edit_book_#{@book.id}" %></td>
                        <td>
                        <%= link_to "Destroy" , book_path(@book),class:"btn-sm btn-danger destroy_book_7842 destroy_book_#{@book.id}", method: :delete, data: {confirm: '本当に削除しますか？'} %>
                        <% end %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
    <div class="col-xs-3 col-xs-offset-9" style="margin-left:75%;">
      <p style="font-size:13px;">CopyRight Infratop.inc</p>
    </div>
  </div>
</div>

