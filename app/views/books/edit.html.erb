<div class="container">
    <div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1>Editing Book</h1>
            <%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
            <div id="error_explanation">
            <h2 style="font-size:24px; color:red;"><%= pluralize(@book.errors.count, "error" )%>  prohibited this obj from being saved:</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li style="font-size:13px; color:red;"><%= message %></li>
                <% end %>
                    </ul>
            </div>
            <% end %>
            <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Title</h4>
                <%= f.text_field :title, class:"book_title col-xs-12" %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Opinion</h4>
                <%= f.text_area :opinion, class:"book_body col-xs-12"  %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <%= f.submit "Update Book", class:"book_submit btn btn-primary col-xs-12" %>
                </div>
            <% end %>
                <%= link_to "show" , book_path(@book.id), class:"book_#{@book.id}" %> | <%= link_to "Back", books_path, class:"back" %>
    </div>
    </div>
        <div class="row">
    <div class="col-xs-3 col-xs-offset-9" style="margin-left:75%;">
      <p style="font-size:13px;">CopyRight Infratop.inc</p>
    </div>
</div>
