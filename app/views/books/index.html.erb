<div class="container">
　　　　　　　<%= form_for(@book) do |f| %>
            <% if @book.errors.any? %>
            <div id="error_explanation">
            <h2 style="font-size:24px; color:red;"><%= pluralize(@book.errors.count, "error" )%>  prohibited this obj from being saved:</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li style="font-size:13px; color:red;"><%= message %></li>
                <% end %>
                    </ul>
            </div>
            <% end %>
    <div class="row">
        <div class="col-xs-3">
            <h2>User info</h2>
                <table class="table">
                    <tr>
                    <%= attachment_image_tag current_user, :profile_image, format:'jpeg', class: " pull-left profile-thumb", size: "100x100", fallback: "no_image.png"%>
                    </tr>
                    <tr>
                        <th>name</th>
                        <th><%= current_user.name %></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th><%= current_user.introduction %></th>
                    </tr>
                </table>
            <div class="row">
            <% if current_user.id %>
             <p><%= link_to "", edit_user_path(current_user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %></p>
            <% end %>
            </div>
                <h2>New book</h2>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Title</h4>
                <%= f.text_field :title, class:"book_title col-xs-12" %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Opinion</h4>
                <%= f.text_area :body, class:"book_body col-xs-12"  %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <%= f.submit "Create Book", class:"book_submit btn btn-primary col-xs-12" %>
                </div>
        <% end %>   
        </div>


        <div class="col-xs-9">
            <h2>Books </h2>
            <table class="table">
                <thead>
                    <tr>
                        <th></th>
                        <th>Title</th>
                        <th>Opinion</th>
                    </tr>
                </thead>
                <% @books.each do |book| %>
                <thead>
                    <tr>
                        <th><%= attachment_image_tag book.user, :profile_image, format:'jpeg', class: " pull-left profile-thumb", size: "50x50", fallback: "no_image.png"%></th>
                        <th>
                        <%= link_to book_path(book.id), class:"book_#{book.id}" do %>
                        <%= book.title %>
                        <% end %>
                        </th>
                        <th><%= book.body %></th>
                    </tr>
                </thead>
                <% end %>
            </table>
        </div>
    </div>
    <div class="row">
    <div class="col-xs-3 col-xs-offset-9" style="margin-left:75%;">
      <p style="font-size:13px;">CopyRight Infratop.inc</p>
    </div>
  </div>
</div>

