    <div class="row">
        <div class="col-xs-3">
        <%= form_for(@book, url: books_path) do |f| %>
            <% if @book.errors.any? %>
            <div id="error_explanation">
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
                    <ul>
                    <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <li><%= message %></li>
                <% end %>
                    </ul>
            </div>
            <% end %>
        <div>
            <h2>User info</h2>
                <table class="table">
                    <tr><%= attachment_image_tag @user, :profile_image, format:'jpeg', class: " pull-left profile-thumb", size: "100x100", fallback: "no_image.png"%>
                    </tr>
                    <tr>
                        <th><%= @user.name %></th>
                        <th></th>
                    </tr>
                    <tr>
                        <th>introduction</th>
                        <th></th>
                    </tr>
                </table>
            <div class="row">
            <% if @user.id == current_user.id %>
             <p><%= link_to "", edit_user_path(@user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></p>
            <% end %>
            </div>
                <h2>New book</h2>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Title</h4>
                <%= f.text_field :title, class:"book_title col-xs-12" %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <h4 style="margin-top:0; margin-bottom:5px; font-size:14px;">Opinion</h4>
                <%= f.text_area :opinion, class:"book_body col-xs-12"  %>
                </div>
                <div class="field row" style="margin-bottom:10px;">
                <%= f.submit "Create Book", class:"book_submit btn btn-primary col-xs-12" %>
                </div>
        <% end %>   
    </div>

