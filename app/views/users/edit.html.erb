<div class="container">
    <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="row">
        <div class="col-xs-3">
        <h2>User info</h2>
            <% if @user.errors.any? %>
            <div id="error_explanation">
            <h2 style="font-size:24px; color:red;"><%= pluralize(@user.errors.count, "error" )%>  prohibited this obj from being saved:</h2>
                    <ul>
                    <% @user.errors.full_messages.each do |message| %>
                    <li style="font-size:13px; color:red;"><%= message %></li>
                <% end %>
                    </ul>
            </div>
            <% end %>
            <%= form_for(@user) do |f| %>
            <div class="field" style="margin-bottom: 10px;">
            <label class="control-label " for="inputEmail">Name</label>
             <%= f.text_field :name, autofocus: true, class:"name", id:"inputEmail"%>      
            </div>
            <div class="field" style="margin-bottom: 10px;">
            <label class="control-label " for="inputEmail">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
            </div>
            <div class="field" style="margin-bottom: 10px;">
            <label class="control-label " for="inputEmail">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, class:"introduction", id:"inputEmail"%> 
            </div>
            <div class="action" style="margin-bottom: 10px;">
             <%= f.submit "Update User", class:"#" %>
            </div>
            <% end %>
        </div>


        <div class="col-xs-9">
        </div>
 <div class="row">
    <div class="col-xs-3 col-xs-offset-9" style="margin-left:75%;">
      <p style="font-size:13px;">CopyRight Infratop.inc</p>
    </div>
    </div>       
</div>